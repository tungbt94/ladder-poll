<% provide(:title, 'All Staff') %>
<h1>All Staff</h1>
  <% if current_staff%>
    <%= will_paginate%>
    <div class="table-responsive">
      <table width=100% class="table">
        <% @staffs.each do |staff|%>
          <tr width=100%>
            <td width=20%>
              <%= image_tag staff.avatar.url(:thumb) %>
            </td>
            <td width=80%>
              <div class="link">
                <%= link_to staff.name, staff %>
              </div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= will_paginate%>
	<% else %>
  	<%= link_to "Sign in now!", "/auth/google_oauth2" , id: "sign_in", class: "btn btn-lg btn-primary" %>
  <% end %>
